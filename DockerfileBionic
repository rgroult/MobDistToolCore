FROM swift:5.1-bionic-slim
RUN apt-get update && apt-get install -y unzip aapt && apt-get -qqy purge apport && rm -rf /var/lib/apt/lists/*
WORKDIR /app
ADD Public /app/Public/
ADD /artifacts/app/run /app/bin/
ADD /artifacts/config/config.json /app/config/

EXPOSE 8080
RUN ls /app/bin/Run
RUN ls /app/config/config.json
CMD /app/bin/Run serve -e production -b 0.0.0.0
